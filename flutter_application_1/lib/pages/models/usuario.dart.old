import 'package:flutter/cupertino.dart';

class Usuario with ChangeNotifier {
  String nome = '';
  String email = '';
  String senha = '';

  bool get isValid {
    if (nome != '' && email != '' && senha != '') {
      return true;
    } else {
      return false;
    }
  }

  void setNome(String nome) {
    this.nome = nome;
    notifyListeners();
  }

  void setEmail(String email) {
    this.email = email;
    notifyListeners();
  }

  void setSenha(String senha) {
    this.senha = senha;
    notifyListeners();
  }
}
